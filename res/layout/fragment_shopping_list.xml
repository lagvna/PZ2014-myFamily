<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff8400" >
     
    <ListView
        android:id="@+id/list"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/list_shape"
        android:cacheColorHint="@color/transparent"
        android:padding="5dp" >

    </ListView>
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@color/black" >

        <TextView
            android:id="@+id/sumFromList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Suma:"
            android:layout_weight="1.0"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/sumUserList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Twoja suma: "
            android:layout_weight="1.0"
            android:textColor="@color/white" />
    	
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/butLay"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <Button
        	android:id="@+id/endShopping"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:layout_weight="1.0"
        	android:background="@drawable/oval_button_selector"
        	android:text="ZakoÅ„cz" />

    	<Button
        	android:id="@+id/editPrice"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:layout_weight="1.0"
        	android:background="@drawable/oval_button_selector"
            android:text="Edytuj" />
	</LinearLayout>
    
 
</LinearLayout>