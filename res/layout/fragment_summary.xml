<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff8400" >
	<ScrollView
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="#ff8400">
	    
	    <LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
	    	<TextView
	    		android:id="@+id/user"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="Użytkownik:" />

    		<Spinner
	    	    android:id="@+id/userList"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />
    		<TextView
	    		android:id="@+id/dateFrom"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="Data od:" />
    		<Button
        		android:id="@+id/fromButton"
        		android:layout_width="match_parent"
        		android:background="@drawable/oval_button_selector"
        		android:layout_height="wrap_content"/>
			<TextView
	    		android:id="@+id/dateTo"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="Data do:" />
			<Button
        		android:id="@+id/toButton"
        		android:layout_width="match_parent"
        		android:background="@drawable/oval_button_selector"
        		android:layout_height="wrap_content"/>
    		<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal" >
		
		        <TextView
            		android:id="@+id/textView1"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_weight="1.0"/>
		
		        <Button
            		android:id="@+id/acceptChoices"
            		style="?android:attr/buttonStyleSmall"
            		android:layout_width="wrap_content"
            		android:background="@drawable/oval_button_selector"
            		android:layout_height="wrap_content"
            		android:text="Zatwierdź" />
    		</LinearLayout>
    		<RelativeLayout 
		    	android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:orientation="vertical"
    			android:background="@drawable/list_shape"
    			android:layout_margin="10dp"
    			android:padding="5dp">
    			<RelativeLayout 
	    		    android:id="@+id/summaryLayout"
	    			android:layout_width="match_parent"	
	    			android:layout_height="wrap_content">
					<TextView
			     		android:id="@+id/expenseAll"
     					android:text="Wydatki za okres:"
     					android:textColor="@color/black"
        				android:layout_height="wrap_content"
        				android:paddingBottom="15dp"
        				android:layout_width="wrap_content"
        				android:paddingLeft="5dp"
    	    			android:paddingRight="5dp"
    	    			android:paddingTop="3dp"/>
					<TextView
			        	android:id="@+id/expenseAll_desc"
		    			android:layout_below="@id/expenseAll"
     					android:textColor="@color/black"
     					android:gravity="center"
     					android:layout_margin="10dp"
     					android:textAppearance="@android:style/TextAppearance.Medium"
        				android:layout_height="wrap_content"
        				android:layout_width="match_parent"
        				android:paddingBottom="7dp"/>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout 
		    	android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:orientation="vertical"
    			android:background="@drawable/list_shape"
    			android:layout_margin="10dp"
    			android:padding="5dp">
    			<RelativeLayout 
	    		    android:id="@+id/detailsLayout"
	    			android:layout_width="match_parent"	
	    			android:layout_height="wrap_content">
					<TextView
			     		android:id="@+id/details"
     					android:text="Poszczególne wydatki w okresie:"
     					android:textColor="@color/black"
        				android:layout_height="wrap_content"
        				android:paddingBottom="15dp"
        				android:layout_width="wrap_content"
        				android:paddingLeft="5dp"
    	    			android:paddingRight="5dp"
    	    			android:paddingTop="3dp"/>
					<TextSwitcher
			        	android:id="@+id/title_desc"
		    			android:layout_below="@id/details"
     					android:textColor="@color/black"
     					android:gravity="center"
     					android:layout_margin="10dp"
     					android:textAppearance="@android:style/TextAppearance.Medium"
        				android:layout_height="wrap_content"
        				android:layout_width="match_parent"
        				android:paddingBottom="7dp"/>
				</RelativeLayout>
			</RelativeLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
        		<Button
            		android:id="@+id/prevExp"
            		android:layout_width="wrap_content"
            		android:layout_height="match_parent"
            		android:textColor="@color/black"
            		android:background="@drawable/oval_button_selector"
            		android:text="Poprzedni"
            		android:layout_weight="1.0"/>
        		<Button
            		android:id="@+id/delExp"
            		android:layout_width="wrap_content"
            		android:layout_height="match_parent"
            		android:textColor="@color/black"
            		android:background="@drawable/oval_button_selector"
            		android:text="Usuń"
            		android:layout_weight="1.0"/>
        		<Button
            		android:id="@+id/nextExp"
            		android:layout_width="wrap_content"
            		android:layout_height="match_parent"
            		android:textColor="@color/black"
            		android:background="@drawable/oval_button_selector"
            		android:text="Następny"
            		android:layout_weight="1.0"/>
    		</LinearLayout>
    	</LinearLayout>
	</ScrollView>
</LinearLayout>
